engine-strict=true
# Allow optional dependencies to be skipped if native build fails (e.g., pg-native)
optional=true
# Re-enable lifecycle scripts so Next.js can fetch SWC binary
# (Disabling scripts caused build-time WasmHash errors due to missing native/WASM artifacts)
# ignore-scripts=true
# Prevent attempting to build problematic native deps (pnpm specific)
never-built-dependencies=libpq,pg-native

